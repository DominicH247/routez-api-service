{
    "requiresCompatibilities": [
        "EC2"
    ],
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "nginx:latest",
            "memory": 256,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "app-volume",
                    "containerPath": "/var/www/project",
                    "readOnly": true
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "awslogs-nginx-routez-ecs",
                    "awslogs-region": "eu-west-2",
                    "awslogs-stream-prefix": "nginx"
                }
            }
        },
        {
            "name": "routez-api-service",
            "image": "650706818394.dkr.ecr.eu-west-2.amazonaws.com/routez-api-service:latest",
            "memory": 256,
            "cpu": 256,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 9000,
                    "protocol": "tcp"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "app-volume",
                    "containerPath": "/var/www/project",
                    "readOnly": true
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "awslogs-nginx-routez-ecs",
                    "awslogs-region": "eu-west-2",
                    "awslogs-stream-prefix": "routez-api"
                }
            }
        }
    ],
    "volumes": [
        {
            "name": "app-volume",
            "dockerVolumeConfiguration": {
                "scope": "shared",
                "autoprovision": true
            }
        }
    ],
    "networkMode": "bridge",
    "placementConstraints": [],
    "family": "nginx-routez"
}